<!DOCTYPE html>
<html>
<head>
  <title><%= product.name %></title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to right, #e6f0ff, #f9f9f9);
      color: #333;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 40px 20px;
    }

    .product-container {
      background-color: #fff;
      padding: 30px;
      border-radius: 16px;
      max-width: 800px;
      width: 100%;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      text-align: center;
      transition: transform 0.2s;
    }

    .product-container:hover {
      transform: scale(1.01);
    }

    h1 {
      font-style: italic;
      font-weight: 900;
      text-transform: uppercase;
      color: #2a2a2a;
      margin-bottom: 15px;
      font-size: 2.5em;
    }

    img {
      width: 100%;
      max-width: 320px;
      border-radius: 12px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      margin: 20px 0;
    }

    p {
      font-size: 1.1em;
      margin: 10px 0;
    }

    .price {
      font-size: 1.5em;
      font-weight: bold;
      color: #28a745;
      margin: 15px 0;
    }

    button,
    a.button-link {
      background-color: #28a745;
      color: white;
      padding: 12px 24px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1em;
      margin: 15px 0;
      text-decoration: none;
      display: inline-block;
      transition: background-color 0.3s ease;
    }

    button:hover,
    a.button-link:hover {
      background-color: #218838;
    }

    hr {
      border: none;
      border-top: 2px dashed #ccc;
      margin: 30px 0;
      width: 100%;
    }

    .review-form {
      background-color: #fdfdfd;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 4px 12px rgba(68, 67, 67, 0.2);
      width: 100%;
      max-width: 700px;
      margin-top: 20px;
    }

    .review-form label {
      font-weight: bold;
      display: block;
      margin-top: 10px;
    }

    input[type="number"],
    textarea {
      width: 100%;
      padding: 10px;
      margin-top: 6px;
      border: 1px solid #ccc;
      border-radius: 8px;
      resize: vertical;
    }

    ul {
      list-style: none;
      padding: 0;
      margin-top: 20px;
    }

    li {
      background: #fff;
      padding: 15px;
      margin-bottom: 12px;
      border-left: 4px solid #28a745;
      border-radius: 6px;
      box-shadow: 0 1px 6px rgba(0, 0, 0, 0.06);
      text-align: left;
    }

    h2 {
      margin-top: 40px;
      margin-bottom: 15px;
      color: #444;
      font-size: 1.8em;
    }

    .back-link {
      margin-top: 20px;
    }
  </style>
</head>

<body>
  <div class="product-container">
    <h1><%= product.name %></h1>
    <img src="<%= product.image %>" alt="<%= product.name %>">
    <p><%= product.description %></p>
    <p class="price">Price: ₹<%= product.price %></p>

    <form action="/add-to-cart/<%= product._id %>" method="POST">
      <button type="submit">Add to Cart</button>
    </form>

    <hr>

    <h2>Leave a Review</h2>
    <form class="review-form" action="/products/<%= product._id %>/reviews" method="POST">
      <label for="rating">Rating (1–5):</label>
      <input type="number" id="rating" name="rating" min="1" max="5" required>

      <label for="comment">Comment:</label>
      <textarea id="comment" name="comment" rows="3" required></textarea>

      <button type="submit">Submit Review</button>
    </form>

    <hr>

    <h2>Reviews</h2>
    <% if (product.reviews && product.reviews.length > 0) { %>
      <ul>
        <% product.reviews.forEach(review => { %>
          <li>
            <strong>Rating:</strong> <%= review.rating %>/5 <br>
            <%= review.comment %>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No reviews yet.</p>
    <% } %>

    <div class="back-link">
      <a class="button-link" href="/">Back to products</a>
    </div>
  </div>
</body>
</html>
