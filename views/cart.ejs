<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Your Cart</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f9f9fb;
      margin: 0;
      padding: 20px;
      color: #333;
    }
    h1 {
      text-align: center;
      margin-bottom: 30px;
      color: #222;
      font-weight: 700;
    }
    a {
      color: #007BFF;
      text-decoration: none;
      transition: color 0.3s ease;
    }
    a:hover {
      color: #0056b3;
      text-decoration: underline;
    }

    .empty-cart {
      text-align: center;
      margin-top: 100px;
      font-size: 1.3rem;
      color: #666;
    }
    .empty-cart a {
      font-weight: 600;
      font-size: 1.1rem;
    }
    .empty-cart svg {
      width: 80px;
      height: 80px;
      fill: #ccc;
      margin-bottom: 20px;
    }

    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0 15px;
      background: white;
      box-shadow: 0 8px 20px rgb(0 0 0 / 0.1);
      border-radius: 10px;
      overflow: hidden;
    }
    thead tr {
      background: #007BFF;
      color: white;
      text-align: left;
      font-weight: 600;
      font-size: 0.95rem;
    }
    thead th {
      padding: 15px 20px;
    }
    tbody tr {
      background: #fefefe;
      transition: background-color 0.25s ease;
    }
    tbody tr:hover {
      background-color: #e9f1ff;
    }
    tbody td {
      padding: 15px 20px;
      vertical-align: middle;
    }

    tbody td input[type="number"] {
      width: 60px;
      padding: 6px 8px;
      border-radius: 6px;
      border: 1.5px solid #ccc;
    }

    button {
      background-color: #28a745;
      color: white;
      border: none;
      padding: 8px 15px;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 600;
      margin-right: 8px;
    }

    button:hover {
      background-color: #218838;
    }

    button.remove-btn {
      background-color: #dc3545;
    }

    button.remove-btn:hover {
      background-color: #b02a37;
    }

    .total-price {
      margin-top: 20px;
      font-size: 1.4rem;
      font-weight: 700;
      text-align: right;
      color: #222;
    }

    .checkout-container {
      text-align: right;
      margin-top: 30px;
    }

    .continue-shopping {
      display: block;
      margin: 40px auto 10px auto;
      text-align: center;
      font-weight: 600;
      font-size: 1.1rem;
      color: #555;
    }
    .continue-shopping:hover {
      color: #007BFF;
      text-decoration: underline;
    }

    #addressModal {
      display: none;
      position: fixed;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 9999;
    }

    #addressModal .modal-content {
      background: #fff;
      padding: 25px;
      border-radius: 10px;
      max-width: 500px;
      margin: 80px auto;
      position: relative;
    }

    #addressModal input[type="text"] {
      width: 100%;
      padding: 10px;
      margin: 8px 0;
      border: 1px solid #ccc;
      border-radius: 6px;
    }

    #addressModal h2 {
      margin-top: 0;
      margin-bottom: 20px;
    }

    #addressModal .actions {
      text-align: right;
      margin-top: 20px;
    }

    /* Responsive */
    @media (max-width: 700px) {
      tbody td, thead th {
        padding: 12px 10px;
      }
      .total-price {
        font-size: 1.2rem;
      }
    }
  </style>
</head>
<body>
  <h1>Shopping Cart</h1>



  <% if (items.length === 0) { %>
    <div class="empty-cart">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M7 18c-1.104 0-2 .896-2 2s.896 2 2 2 2-.896 2-2-.896-2-2-2zm10 0c-1.104 0-2 .896-2 2s.896 2 2 2 2-.896 2-2-.896-2-2-2zM6.16 6l.94 5H18l1.6-7H5.21l.95 4zM6 6l-.75-4H1v2h3.21l3.75 17H20v-2H8.42l-.42-2H19c.55 0 1-.45 1-1s-.45-1-1-1H7.4l-.5-3H19v-2H7.28l-.5-3z"/>
      </svg>
      <p>Your cart is empty. <a href="/">Shop now</a></p>
    </div>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Subtotal</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
          <tr>
            <td><%= item.product.name %></td>
            <td>₹<%= item.product.price.toFixed(2) %></td>
            <td>
              <form action="/cart/update/<%= item.product._id %>" method="POST" style="display:inline-block;">
                <input type="number" name="quantity" value="<%= item.quantity %>" min="0" required>
            </td>
            <td>₹<%= item.totalPrice.toFixed(2) %></td>
            <td>
                <button type="submit">Update</button>
              </form>
              <form action="/cart/remove/<%= item.product._id %>" method="POST" style="display:inline-block;">
                <button type="submit" class="remove-btn">Remove</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <p class="total-price">Total Price: ₹<%= totalPrice.toFixed(2) %></p>

    <div class="checkout-container">
      <% if(userId) { %>
        <button onclick="openModal()">Proceed to Checkout</button>
      <% } else { %>
        <a href="/login">Login to Checkout</a>
      <% } %>
    </div>
  <% } %>

  <a href="/" class="continue-shopping">← Continue Shopping</a>


  <div id="addressModal">
    <div class="modal-content">
      <h2>Shipping Address</h2>
      <form id="addressForm" action="/checkout" method="POST">
        <input type="text" name="street" placeholder="Street Address" required />
        <input type="text" name="city" placeholder="City" required />
        <input type="text" name="state" placeholder="State" required />
        <input type="text" name="zip" placeholder="ZIP Code" required />
        <input type="text" name="country" placeholder="Country" required />

        <div class="actions">
          <button type="button" onclick="closeModal()">Cancel</button>
          <button type="submit" style="background-color:#007BFF;">Submit</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function openModal() {
      document.getElementById("addressModal").style.display = "block";
    }

    function closeModal() {
      document.getElementById("addressModal").style.display = "none";
    }

    window.onclick = function(event) {
      const modal = document.getElementById("addressModal");
      if (event.target === modal) {
        closeModal();
      }
    }
  </script>
</body>
</html>
